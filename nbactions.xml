<?xml version="1.0" encoding="UTF-8"?>
<actions>
	<action>
		<actionName>rebuild</actionName>
		<packagings>
			<packaging>*</packaging>
		</packagings>
		<goals>
			<goal>clean</goal>
			<goal>install</goal>
		</goals>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>
	<action>
		<actionName>build</actionName>
		<packagings>
			<packaging>*</packaging>
		</packagings>
		<goals>
			<goal>install</goal>
		</goals>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>		
	<action>
		<actionName>debug</actionName>
		<packagings>
			<packaging>jar</packaging>
		</packagings>
		<goals>
			<goal>spring-boot:run</goal>
		</goals>
		<properties>
			<jpda.listen>true</jpda.listen>
			<spring-boot.run.jvmArguments>-noverify -XX:TieredStopAtLevel=1 -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</spring-boot.run.jvmArguments>
			<Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>
			<Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
		</properties>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
			<activatedProfile>skip-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>
	<action>
		<actionName>run</actionName>
		<packagings>
			<packaging>jar</packaging>
		</packagings>
		<goals>
			<goal>spring-boot:run</goal>
		</goals>
		<properties>
			<spring-boot.run.jvmArguments>-noverify -XX:TieredStopAtLevel=1</spring-boot.run.jvmArguments>
			<Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>
			<Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
		</properties>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
			<activatedProfile>skip-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>
	<action>
		<actionName>test</actionName>
		<packagings>
			<packaging>*</packaging>
		</packagings>
		<goals>
			<goal>test</goal>
		</goals>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
			<activatedProfile>skip-compilation-and-resources</activatedProfile>
		</activatedProfiles>
		<properties>
			<skipTests>false</skipTests>
		</properties>
	</action>	
	<action>
		<actionName>CUSTOM-Full Build</actionName>
		<displayName>Full Build</displayName>
		<goals>
			<goal>clean</goal>
			<goal>install</goal>
		</goals>
	</action>	
	<action>
		<actionName>CUSTOM-Integration Test</actionName>
		<displayName>Integration Test</displayName>
		<goals>
			<goal>failsafe:integration-test</goal>
		</goals>
	</action>	
	<action>
		<actionName>CUSTOM-SpotBugs</actionName>
		<displayName>SpotBugs</displayName>
		<goals>
			<goal>spotbugs:check</goal>
		</goals>
	</action>
	<action>
		<actionName>CUSTOM-Dependency Tree</actionName>
		<displayName>Dependency Tree</displayName>
		<goals>
			<goal>dependency:tree</goal>
		</goals>
	</action> 	
	<action>
		<actionName>CUSTOM-Sortpom (verify only)</actionName>
		<displayName>Sortpom (verify only)</displayName>
		<goals>
			<goal>sortpom:verify</goal>
		</goals>
	</action> 
	<action>
		<actionName>CUSTOM-Sortpom</actionName>
		<displayName>Sortpom</displayName>
		<goals>
			<goal>sortpom:sort</goal>
		</goals>
	</action> 		
	<action>
		<actionName>CUSTOM-Enforce Dependency Convergence</actionName>
		<displayName>Enforce Dependency Convergence</displayName>
		<goals>
			<goal>enforcer:enforce@default</goal>
		</goals>
	</action> 	
	<action>
		<actionName>CUSTOM-Eclipse Code Formatter (verify only)</actionName>
		<displayName>Eclipse Code Formatter (verify only)</displayName>
		<goals>
			<goal>formatter:validate</goal>
		</goals>
	</action> 	
	<action>
		<actionName>CUSTOM-Eclipse Code Formatter</actionName>
		<displayName>Eclipse Code Formatter</displayName>
		<goals>
			<goal>formatter:format</goal>
		</goals>
	</action>
	<action>
		<actionName>CUSTOM-Eclipse Code Formatter File</actionName>
		<displayName>Eclipse Code Formatter File</displayName>
		<goals>
			<goal>formatter:format</goal>
		</goals>
		<properties>
			<formatter.includes>**/${classNameWithExtension}</formatter.includes>
		</properties>
	</action>	
</actions>
