<?xml version="1.0" encoding="UTF-8"?>
<actions>
	<action>
		<actionName>rebuild</actionName>
		<packagings>
			<packaging>*</packaging>
		</packagings>
		<goals>
			<goal>clean</goal>
			<goal>install</goal>
		</goals>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>
	<action>
		<actionName>build</actionName>
		<packagings>
			<packaging>*</packaging>
		</packagings>
		<goals>
			<goal>install</goal>
		</goals>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>		
	<action>
		<actionName>debug</actionName>
		<packagings>
			<packaging>jar</packaging>
		</packagings>
		<goals>
			<goal>spring-boot:run</goal>
		</goals>
		<properties>
			<jpda.listen>true</jpda.listen>
			<spring-boot.run.jvmArguments>-noverify -XX:TieredStopAtLevel=1 -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</spring-boot.run.jvmArguments>
			<Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>
			<Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
		</properties>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
			<activatedProfile>skip-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>
	<action>
		<actionName>run</actionName>
		<packagings>
			<packaging>jar</packaging>
		</packagings>
		<goals>
			<goal>spring-boot:run</goal>
		</goals>
		<properties>
			<spring-boot.run.jvmArguments>-noverify -XX:TieredStopAtLevel=1</spring-boot.run.jvmArguments>
			<Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>
			<Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
		</properties>
		<activatedProfiles>
			<activatedProfile>skip-all-but-compilation-and-resources</activatedProfile>
			<activatedProfile>skip-compilation-and-resources</activatedProfile>
		</activatedProfiles>
	</action>
	<action>
		<actionName>CUSTOM-Full Build</actionName>
		<displayName>Full Build</displayName>
		<goals>
			<goal>clean</goal>
			<goal>install</goal>
		</goals>
	</action>	
	<action>
		<actionName>CUSTOM-Full Build with QA</actionName>
		<displayName>Full Build with QA</displayName>
		<goals>
			<goal>clean</goal>
			<goal>install</goal>
			<goal>org.codehaus.mojo:findbugs-maven-plugin:3.0.5:check</goal>
			<goal>failsafe:integration-test</goal>
			<goal>com.github.ekryd.sortpom:sortpom-maven-plugin:2.8.0:verify</goal>
			<goal>net.revelc.code.formatter:formatter-maven-plugin:2.8.0:validate</goal>
		</goals>
		<properties>
			<sort.keepBlankLines>true</sort.keepBlankLines>
			<sort.nrOfIndentSpace>-1</sort.nrOfIndentSpace>
			<configfile>${project.basedir}/eclipse-formatter-config.xml</configfile>
			<lineending>KEEP</lineending>
		</properties>
	</action>		
	<action>
		<actionName>CUSTOM-Integration Test</actionName>
		<displayName>Integration Test</displayName>
		<goals>
			<goal>failsafe:integration-test</goal>
		</goals>
	</action>	
	<action>
		<actionName>CUSTOM-FindBugs</actionName>
		<displayName>FindBugs</displayName>
		<goals>
			<goal>org.codehaus.mojo:findbugs-maven-plugin:3.0.5:check</goal>
		</goals>
	</action>
	<action>
		<actionName>CUSTOM-Dependency Tree</actionName>
		<displayName>Dependency Tree</displayName>
		<goals>
			<goal>org.apache.maven.plugins:maven-dependency-plugin:3.0.2:tree</goal>
		</goals>
	</action> 	
	<action>
		<actionName>CUSTOM-Sortpom (verify only)</actionName>
		<displayName>Sortpom (verify only)</displayName>
		<goals>
			<goal>com.github.ekryd.sortpom:sortpom-maven-plugin:2.8.0:verify</goal>
		</goals>
		<properties>
			<sort.keepBlankLines>true</sort.keepBlankLines>
			<sort.nrOfIndentSpace>-1</sort.nrOfIndentSpace>
		</properties>
	</action> 
	<action>
		<actionName>CUSTOM-Sortpom</actionName>
		<displayName>Sortpom</displayName>
		<goals>
			<goal>com.github.ekryd.sortpom:sortpom-maven-plugin:2.8.0:sort</goal>
		</goals>
		<properties>
			<sort.keepBlankLines>true</sort.keepBlankLines>
			<sort.nrOfIndentSpace>-1</sort.nrOfIndentSpace>
		</properties>
	</action> 		
	<action>
		<actionName>CUSTOM-Enforce Dependency Convergence</actionName>
		<displayName>Enforce Dependency Convergence</displayName>
		<goals>
			<goal>enforcer:enforce@dependency-convergence</goal>
		</goals>
	</action> 	
	<action>
		<actionName>CUSTOM-Eclipse Code Formatter (verify only)</actionName>
		<displayName>Eclipse Code Formatter (verify only)</displayName>
		<goals>
			<goal>net.revelc.code.formatter:formatter-maven-plugin:2.8.0:validate</goal>
		</goals>
		<properties>
			<configfile>${project.basedir}/eclipse-formatter-config.xml</configfile>
			<lineending>KEEP</lineending>
		</properties>
	</action> 	
	<action>
		<actionName>CUSTOM-Eclipse Code Formatter</actionName>
		<displayName>Eclipse Code Formatter</displayName>
		<goals>
			<goal>net.revelc.code.formatter:formatter-maven-plugin:2.8.0:format</goal>
		</goals>
		<properties>
			<configfile>${project.basedir}/eclipse-formatter-config.xml</configfile>
			<lineending>KEEP</lineending>
		</properties>
	</action> 		
</actions>
